<div class="row">
    {{#if error_message}}
        <div class="alert alert-danger" role="alert" style="width: 98%;">
            {{error_message}}
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">×</span>
            </button>
        </div>
    {{/if}}

    {{#if success_message}}
        <div class="alert alert-success" role="alert" style="width: 98%;">
            {{success_message}}
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">×</span>
            </button>
        </div>
    {{/if}}
</div>