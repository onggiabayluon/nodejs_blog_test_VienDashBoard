<div class="mt-4 container-fluid">
    <div class="row">
        {{!-- left: 8 --}}
        <div class="col-lg-8">
            <div class="row">
                {{#each courses}}
                    {{!-- 12/3 = 4 --}}
                    <div class="col-lg-3">
                        <div class="card h-100" style="width: 11rem; min-height: 300px">
                            <a href="./manga/{{this.slug}}">
                                {{#each thumbnail}}
                                <img class="card-img-top" src="{{this.url}}" alt="Card image" style="max-height:200px;">
                                {{/each}}
                            </a>
                            <div class="mt-auto">
                                <div class="card-body">
                                    <a href="./manga/{{this.slug}}">
                                        <h5 class="card-title">{{this.title}}</h5>
                                    </a>
                                    <a href="#" class="btn btn-primary">Go somewhere</a>
                                </div>
                            </div>
                            
                        </div>
                    </div>
                {{/each}}
            </div>
        </div>
        {{!-- right: 4 --}}
        <div class="col-lg-4">
            <div class="row ml-5">
                <div class="card" style="width: 12rem; height: auto">
                    <img class="card-img-top" src="..." alt="Card image cap">
                    <div class="card-body">
                        <h5 class="card-title">Card title</h5>
                        <p class="card-text">Some quick example text to build on the card title and make up the bulk of
                            the
                            card's
                            content.</p>
                        <a href="#" class="btn btn-primary">Go somewhere</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>